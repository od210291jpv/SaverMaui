<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SaverMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SaverMaui.Views"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <ShellContent Title="Settings" Route="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
        <ShellContent Title="Categories" ContentTemplate="{DataTemplate local:CategoriesPage}" />
        <ShellContent Title="Feed" ContentTemplate="{DataTemplate local:FeedPage}" />
        <ShellContent Title="Favorites" ContentTemplate="{DataTemplate local:FavoritesPage}" />
    </TabBar>

    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}"></ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Categories">
        <ShellContent ContentTemplate="{DataTemplate local:CategoriesPageV2}"></ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Feed">
        <ShellContent ContentTemplate="{DataTemplate local:FeedPage}"></ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Favorites">
        <ShellContent ContentTemplate="{DataTemplate local:FavoritesPage}"></ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Notification Center">
        <ShellContent ContentTemplate="{DataTemplate local:NotificationCenterPage}"></ShellContent>
    </FlyoutItem>

</Shell>
