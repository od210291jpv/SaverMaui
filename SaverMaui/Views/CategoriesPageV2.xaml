<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:vm="clr-namespace:SaverMaui.ViewModels"
             x:Class="SaverMaui.Views.CategoriesPageV2"
             Title="CategoriesPageV2">
    <ContentPage.BindingContext>
        <vm:CategoriesViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button Command="{Binding NavigateToFeedItemCommand}" CornerRadius="0" Text="Open" BackgroundColor="DeepPink" TextColor="White" Margin="5"/>
        <Button Command="{Binding AddFavoriteCategoryCmd}" CornerRadius="0" Text="Add To Favorites" BackgroundColor="DeepPink" TextColor="White" Margin="5"/>
        <FlexLayout Direction="ColumnReverse" Padding="5">

        </FlexLayout>
    </StackLayout>
    
</ContentPage>