<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SaverMaui.ViewModels"
             x:Class="SaverMaui.Views.CategoryFeedPage"
             Title="CategoryFeedPage">
    <ContentPage.BindingContext>
        <vm:CategoryFeedViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <FlexLayout>
            <CarouselView x:Name="Feed" ItemsSource="{Binding ContentCollection}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Path=ImageUri}" Margin="0"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>