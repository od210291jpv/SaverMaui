<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SaverMaui.ViewModels"
             x:Class="SaverMaui.Views.ContentCleanupPage"
             Title="ContentCleanupPage">
    <ContentPage.BindingContext>
        <vm:ContentCleanupViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <FlexLayout>
            <CarouselView ItemsSource="{Binding ContentCollection}" CurrentItem="{Binding CurrentContent}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Grid.Row="0" Source="{Binding Path=Source}" Aspect="AspectFit" IsAnimationPlaying="True">
                            </Image>
                            <Button Grid.Row="0" 
                                Grid.Column="0" 
                                Text="D" FontAttributes="Bold" 
                                TextColor="White"
                                BackgroundColor="DeepPink" 
                                CornerRadius="50" 
                                VerticalOptions="End" 
                                HorizontalOptions="End" 
                                Margin="30" HeightRequest="60" 
                                WidthRequest="60" 
                                Padding="0" 
                                Opacity="0.6" 
                                x:Name="DeleteButton" Clicked="OnDeleteClicked"/>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </FlexLayout>
    </ContentPage.Content>
    
</ContentPage>